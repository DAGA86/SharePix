@model SharePix.WebApp.Models.Albums.EditAlbumViewModel

@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

@{
    ViewData["Title"] = Localize("editAlbum.title");
}

<h1>@Localize("editAlbum.title")</h1>

<section id="fm">
    <form asp-action="EditAlbum" id="uploadForm" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible alert-edit" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @ViewData["ErrorMessage"]
            </div>
        }

        @foreach (var photoId in Model.PhotoIds)
        {
            <input type="hidden" name="PhotoIds" value="@photoId" />
            <div class="form-group col-md-12">
                <div class="containerPhoto">
                    <div id="preview" class="img-file"><img src="~/photos/@(photoId).jpg" /></div>
                </div>
            </div>
        }

        <div class="form-group col-md-12">
            <label asp-for="Name" class="control-label">@Localize("label.name")</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Description">@Localize("label.description")</label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>

        <div class="form-group col-md-12">
            <input type="submit" value="@Localize("general.button.save")" class="btt" />
            <input type="button" onclick="window.location = '/Home/Index'" value="@Localize("general.button.cancel")" class="btt cancel" />
            <div>
                <button type="button" class="btt" data-toggle="modal" data-target="#exampleModal" asp-action="Delete"><img data-bs-toggle="tooltip" data-placement="bottom" title="@Localize("general.button.delete")" src="~/images/lixo.png" /></button>
            </div>
        </div>
    </form>
</section>


<form>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Localize("album.message.warning")</h5>
                </div>
                <div class="modal-body">
                    <p>@Localize("album.message.delete")</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localize("general.button.cancel")</button>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@Model.Id">@Localize("general.button.confirm")</a>
                </div>
            </div>
        </div>
    </div>
</form>


@section Styles{
    <link rel="stylesheet" href="~/css/stylePhotoAlbum.css">
  }

@section Scripts{
    <script src="/js/uploadPhoto.js"></script>
}