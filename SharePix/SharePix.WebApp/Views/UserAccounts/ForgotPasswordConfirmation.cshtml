@{
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

@{
    ViewData["Title"] = Localize("general.info");
}

<header id="form-box" class="vm transparent">

    <form>

        @if (ViewData["SuccessMessage"] != null)
        {
            <div id="successAlert" class="alert alert-success alert-dismissible alert-edit" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                @ViewData["SuccessMessage"]
            </div>
        }

 
        <h3>@Localize("general.info")</h3>

        <div>
            <label class="control-label">@Localize("info.messageEmail")</label>
        </div>           

        <div class="form-style padding">
            <input type="button" onclick="window.location = '/Useraccounts/Login'" value="@Localize("general.button.back")" class=" btn btn-primary" />
        </div>
    </form>
</header>








