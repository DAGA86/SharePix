@model SharePix.WebApp.Models.UserAccounts.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

@{
    ViewData["Title"] = Localize("forgottenPassword.title");
}

<header id="form-box" class="vm transparent">

    <form asp-action="ForgotPassword">

        @if (ViewData["ErrorMessage"] != null)
        {

            <div class="text-danger">@ViewData["ErrorMessage"]</div>
        }

        <h3>@Localize("forgottenPassword.title")</h3>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-style">
            <input asp-for="Email" class="form-control" />
            <label asp-for="Email">@Localize("insertEmail.phrase")</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>     
        
        <div class="form-style padding">
            <input type="submit" onclick="window.location = '/Useraccounts/ForgotPasswordConfirmation'" value="@Localize("general.button.send")" class=" btn btn-primary" />
        </div>
        <div class="form-style padding">
            <input type="button" onclick="window.location = '/Useraccounts/Login'" value="@Localize("general.button.cancel")" class=" btn btn-primary" />
        </div>
    </form>
</header>








