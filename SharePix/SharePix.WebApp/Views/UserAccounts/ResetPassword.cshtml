@model SharePix.WebApp.Models.UserAccounts.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<header id="form-box" class="vm transparent">
    <form asp-action="ResetPassword">

        @{
            ViewData["Title"] = Localize("recoverPassword.title");
        }

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="text-danger">@ViewData["ErrorMessage"]</div>
        }

        <div>
            <h3>@Localize("register.title")</h3>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />   
        <div class="form-style">
            <input asp-for="Password" class="form-control" />
            <label asp-for="Password" class="control-label">@Localize("label.password")</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-style">
            <input type="password" class="form-control" />
            <label class="control-label">@Localize("label.confirmPassword")</label>
            <span class="text-danger"></span>
        </div>
        <div class="form-style padding">
            <input type="submit" value="@Localize("general.button.change")" class=" btn btn-primary" />
        </div>
        <div class="form-style padding">
            <input type="button" onclick="window.location = '/Useraccounts/Login'" value="@Localize("general.button.cancel")" class=" btn btn-primary" asp-action="login" />
        </div>
    </form>
</header>



