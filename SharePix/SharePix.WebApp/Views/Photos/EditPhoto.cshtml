@model SharePix.WebApp.Models.Photos.EditPhotoViewModel

@{
    ViewData["Title"] = @Localize("editPhoto.title");
}

@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<h1>@Localize("editPhoto.title")</h1>
<section id="fm">
    <form id="pic" asp-action="EditPhoto" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="text-danger">@ViewData["ErrorMessage"]</div>
        }
        <div class="form-group col-md-12">
            <div class="containerPhoto">
                <div id="preview" class="img-file"><img src="~/photos/@(Model.Id).jpg" /></div>
                @*<input type="file" name="files" id="photos" />*@
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Date">@Localize("label.date")</label>
                <input asp-for="Date" type="date" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Location">@Localize("label.location")</label>
                <input asp-for="Location" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Description" >@Localize("label.description")</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="@Localize("general.button.upload")" class="btt" />
            <input type="button" onclick="window.location = '/Home/Index'" value="@Localize("general.button.cancel")" class="btt cancel" />
        </div>
    </form>
</section>

@section Styles{
    <link rel="stylesheet" href="~/css/uploadPhotoAlbum.css">
  }

@section Scripts{
    <script src="/js/uploadPhoto.js"></script>
}





