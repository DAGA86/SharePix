@model SharePix.WebApp.Models.Photos.UploadPhotoViewModel

@{
    ViewData["Title"] = "Upload Photos";
}

@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<h2>Upload Photos</h2>
<section id="fm">
    <form id="pic" asp-action="UploadPhoto" enctype="multipart/form-data">
        <div class="form-group">
            <div class="containerPhoto">
                <div id="preview" class="img"></div>
                <input type="file" name="files" id="photos" multiple />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location">@Localize("label.location.title")</label>
            <input type="text" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <label asp-for="Description">@Localize("label.description.title")</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</section>

@section Styles{
    <link rel="stylesheet" href="~/css/uploadPhoto.css">
  }

@section Scripts{
    <script src="/js/uploadPhoto.js"></script>    
}





