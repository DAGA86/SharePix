@model SharePix.WebApp.Models.Photos.UploadPhotoViewModel

@{
    ViewData["Title"] = @Localize("uploadPhotos.title");
}

@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}

<h2>Upload Photos</h2>
<section id="fm">
    <form id="pic" asp-action="UploadPhoto" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="text-danger">@ViewData["ErrorMessage"]</div>
        }
        <div class="form-group">
            <div class="containerPhoto">
                <div id="preview" class="img"></div>
                <input type="file" name="files" id="photos" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location">@Localize("label.location")</label>
            <input asp-for="Location" type="text" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <label asp-for="Description">@Localize("label.description")</label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">@Localize("general.button.upload")</button>
        <input type="button" onclick="window.location = '/Home/Index'" value="@Localize("general.button.cancel")" class="btt cancel" />
    </form>
</section>

@section Styles{
    <link rel="stylesheet" href="~/css/uploadPhotoAlbum.css">
  }

@section Scripts{
    <script src="/js/uploadPhoto.js"></script>
}





