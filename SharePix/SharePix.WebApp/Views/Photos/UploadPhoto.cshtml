@model SharePix.WebApp.Models.Photos.UploadPhotoViewModel

@{
    ViewData["Title"] = "Upload Photos";
}

@{
    Layout = "~/Views/Shared/_BasicLayout.cshtml";
}



<meta http-equiv="X-UA-Compatible" content="ie=edge">

<title>Google map Places Autocomplete - Tutsmake.com</title>


<div class="container">

    <div class="row">

        <div class="col-12"><h2>Google Places Autocomplete InputBox Example Without Showing Map</h2></div>

        <div class="col-12">

            <div id="custom-search-input">

                <div class="input-group">

                    <input id="autocomplete_search" name="autocomplete_search" type="text" class="form-control" placeholder="Search" />

                    <input type="hidden" name="lat">

                    <input type="hidden" name="long">

                </div>

            </div>

        </div>

    </div>

</div>


<h2>Upload Photos</h2>
<section id="fm">
    <form id="pic" asp-action="UploadPhoto" enctype="multipart/form-data">
        <div class="form-group">
            <div class="containerPhoto">
                <div id="preview" class="img"></div>
                <input type="file" name="files" id="photos" multiple />
            </div>
        </div>
        <div class="col-12"><h2>Google Places Autocomplete InputBox Example Without Showing Map</h2></div>

        <div class="col-12">

            <div id="custom-search-input">

                <div class="input-group">

                    <input id="autocomplete_search" name="autocomplete_search" type="text" class="form-control" placeholder="Search" />

                    <input type="hidden" name="lat">

                    <input type="hidden" name="long">

                </div>

            </div>

        </div>
        <div class="form-group">
            <label asp-for="Location">@Localize("label.location.title")</label>
            <input type="text" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="form-group">
            <label asp-for="Description">@Localize("label.description.title")</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Upload</button>
    </form>
</section>

@section Styles{
    <link rel="stylesheet" href="~/css/uploadPhoto.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" />


}

@section Scripts{
    <script src="/js/uploadPhoto.js"></script>
    <script async
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDfN5JZU_jKcUTt0DYWYyh-dNWQXyZRaTI&libraries=places&callback=initMap">
    </script>
    <script>
        $(document).ready(function () {
            const center = { lat: 50.064192, lng: -130.605469 };
            // Create a bounding box with sides ~10km away from the center point
            const defaultBounds = {
                north: center.lat + 0.1,
                south: center.lat - 0.1,
                east: center.lng + 0.1,
                west: center.lng - 0.1,
            };
            const input = document.getElementById("autocomplete_search");
            const options = {
                bounds: defaultBounds,
                componentRestrictions: { country: "us" },
                fields: ["address_components", "geometry", "icon", "name"],
                strictBounds: false,
                types: ["establishment"],
            };
            const autocomplete = new google.maps.places.Autocomplete(input, options);
        });
