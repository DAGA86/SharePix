@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    string returnUrl = ViewContext.HttpContext.Request.Path;

    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.Name })
        .ToList();
}


<!doctype html>
<html>

<head>

    <title>@ViewData["Title"] - SharePix.WebApp</title>

    <!-- Basic page needs ============================================ -->
    <title>Joker | Home</title>
    <meta charset="utf-8">
    <meta name="author" content="">
    <meta name="description" content="">
    <meta name="keywords" content="">

    <!-- Mobile specific metas
    ============================================ -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Favicon
    ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/fav_icon.ico">

    <!-- Google web fonts
    ============================================ -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Ysabeau+Infant:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900,200italic,300italic,400italic,600italic,700italic,900italic' rel='stylesheet' type='text/css'>

    <!-- Libs CSS
            ============================================ -->
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/plugins/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="~/plugins/fancybox/jquery.fancybox.css">
    <link rel="stylesheet" href="~/plugins/fancybox/helpers/jquery.fancybox-thumbs.css">
    <link rel="stylesheet" href="~/plugins/fancybox/helpers/jquery.fancybox-buttons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Add necessary CSS reference for Select2 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

    <!-- Theme CSS
    ============================================ -->
    <link rel="stylesheet" href="~/css/style.css">
    <!--<link rel="stylesheet" href="css/rtl.css"> -->
    <!-- JS Libs
    ============================================ -->
    <script src="~/plugins/modernizr.js"></script>

    <!-- Old IE stylesheet
    ============================================ -->
    <!--[if lte IE 9]>
        <link rel="stylesheet" type="text/css" href="css/oldie.css">
        <script src="~/js/placeholderIE.js"></script>
    <![endif]-->
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>

    <div id="page_loader" class="page_loader">
        <div id="loader"></div>
    </div>

    <!-- - - - - - - - - - - - - - Cookie Control & Old ie Message - - - - - - - - - - - - - - - - -->

    <div class="messages_wrap">

        <!-- - - - - - - - - - - - - - Old IE Message - - - - - - - - - - - - - - - - -->
        <!--[if lt IE 9]>

        <div class="old_ie_message">

            <div class="on_the_sides">

                <div class="left_side">

                    <i class="icon-attention"></i> <b>Attention!</b> This page may not display correctly. You are using an outdated version of Internet Explorer. For a faster, safer browsing experience.

                </div>

                <div class="right_side">

                    <a href="http://windows.microsoft.com/en-US/internet-explorer/products/ie/home?ocid=ie6_countdown_bannercode" class="btn small transparent black" target="_blank">Update Now!</a>

                </div>

            </div>

        </div>

        <![endif]-->
        <!-- - - - - - - - - - - - - - End of Old IE Message - - - - - - - - - - - - - - - - -->

    </div>

    <!-- - - - - - - - - - - - - - End of Cookie Control & Old ie Message - - - - - - - - - - - - - - - - -->

    <div id="document_wrap">

        <!-- - - - - - - - - - - - - - Header - - - - - - - - - - - - - - - - -->

        <header role="banner" id="header" class="vm">

            <!-- - - - - - - - - - - - - - Logo - - - - - - - - - - - - - - - - -->

            <a asp-action="Index" asp-controller="Home" class="logo">

                <img class="size" src="~/images/logo.png" alt="">

            </a>

            <!-- - - - - - - - - - - - - - End Logo - - - - - - - - - - - - - - - - -->
            <!-- - - - - - - - - - - - - - Main Navigation Container - - - - - - - - - - - - - - - - -->

            <div id="vertical_menu_wrap" class="vm_wrap">

                <!-- - - - - - - - - - - - - - Main Navigation - - - - - - - - - - - - - - - - -->

                <nav>

                    <ul class="navigation">

                        <li>
                            <a asp-action="FriendsAndRequests" asp-controller="UserAccounts">@Localize("friends.title")</a>
                        </li>

                        <li class="has_submenu">
                            <a>@Localize("photos.title")</a>

                            <!-- - - - - - - - - - - - - - Submenu (level 2) - - - - - - - - - - - - - - - - -->

                            <ul class="submenu">
                                <li><a asp-action="UploadPhoto" asp-controller="Photos">@Localize("uploadPhoto.title")</a></li>
                            </ul>

                            <!-- - - - - - - - - - - - - - End of Submenu (level 2) - - - - - - - - - - - - - - - - -->

                        </li>

                        <li class="has_submenu current">

                            <a>@Localize("albums.title")</a>

                            <!-- - - - - - - - - - - - - - Submenu (level 2) - - - - - - - - - - - - - - - - -->

                            <ul class="submenu">
                                <li><a asp-action="CreateAlbum" asp-controller="Albums">@Localize("createAlbum.title")</a></li>
                            </ul>

                            <!-- - - - - - - - - - - - - - End of Submenu (level 2) - - - - - - - - - - - - - - - - -->

                        </li>
                        <li>
                            <a asp-action="Edit" asp-controller="UserAccounts">@Localize("profile.title")</a>
                        </li>
                        <li>
                            <a asp-action="Logout" asp-controller="UserAccounts">@Localize("logout.title")</a>
                        </li>
                    </ul>
                </nav>
                <!-- - - - - - - - - - - - - - End of Main Navigation - - - - - - - - - - - - - - - - -->

            </div><!--/ #vertical_menu_wrap -->
            <!-- - - - - - - - - - - - - - End of Main Navigation Container - - - - - - - - - - - - - - - - -->
            <!-- - - - - - - - - - - - - - Top Buttons - - - - - - - - - - - - - - - - -->

            <div id="top_actions_wrap">

                <form asp-action="ChangeLanguage" asp-controller="Home" method="post" class="lang-position">
                    <input type="hidden" id="returnUrl" name="returnUrl" value="@returnUrl" />
                    <select id="culture"
                            name="culture"
                            class="form-control-language"
                            onchange="this.form.submit();"
                            asp-items="cultureItems"
                            asp-for="@requestCulture.RequestCulture.UICulture.Name">
                    </select>
                </form>


                <!-- - - - - - - - - - - - - - Isotope Filter - - - - - - - - - - - - - - - - -->

                <div id="filter_wrap">

                    <img id="filter_btn" src="~/images/add.png" class="toggle_box" data-width="28" data-height="28" data-event="click" data-icon-name="filter">

                    <ul id="filter" class="animation_box">
                        <li><a asp-action="UploadPhoto" asp-controller="Photos">@Localize("uploadPhoto.title")</a></li>
                        <li><a asp-action="CreateAlbum" asp-controller="Albums">@Localize("createAlbum.title")</a></li>
                    </ul>

                </div>



                <!-- - - - - - - - - - - - - - End of Isotope Filter - - - - - - - - - - - - - - - - -->

                <span id="toggle_menu" class="si-icon" data-width="36" data-height="36" data-event="click" data-icon-name="hamburgerCross"></span>

            </div><!--/ #top_btns_wrap -->
            <!-- - - - - - - - - - - - - - End of Top Buttons - - - - - - - - - - - - - - - - -->

        </header>

        <!-- - - - - - - - - - - - - - End Header - - - - - - - - - - - - - - - - -->
        <!-- - - - - - - - - - - - - - Extended Block (image, gmap) - - - - - - - - - - - - - - - - -->
        <!-- - - - - - - - - - - - - - End of Extended Block - - - - - - - - - - - - - - - - -->
        <!-- - - - - - - - - - - - - - Page content - - - - - - - - - - - - - - - - -->

        <div id="page_wrap" class="wall">
            @RenderBody()
        </div><!--/ .page_wrapper -->
        <!-- - - - - - - - - - - - - - End page content - - - - - - - - - - - - - - - - -->
        <!-- - - - - - - - - - - - - - Footer - - - - - - - - - - - - - - - - -->

        <footer role="contentinfo" id="footer" class="fullscreen">

            <span class="copyright">&copy; 2023 SharePix </span>

            <!-- - - - - - - - - - - - - - Social icons - - - - - - - - - - - - - - - - -->

            <ul class="social_links">

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Facebook</span><i class="icon-facebook-1"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">GooglePlus+</span><i class="icon-gplus"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Twitter</span><i class="icon-twitter"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">LinkedIn</span><i class="icon-linkedin-1"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Instagramm</span><i class="icon-instagramm"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Flickr</span><i class="icon-flickr"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">500px</span><i class="icon-fivehundredpx"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Pinterest</span><i class="icon-pinterest-circled"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Dribbble</span><i class="icon-dribbble-1"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">YouTube</span><i class="icon-youtube-play"></i></a>
                </li>

                <li>
                    <a href="#" class="tooltip_container"><span class="tooltip top">Vimeo</span><i class="icon-vimeo-squared"></i></a>
                </li>

            </ul>

            <!-- - - - - - - - - - - - - - End Social icons - - - - - - - - - - - - - - - - -->

        </footer>

        <!-- - - - - - - - - - - - - - End Footer - - - - - - - - - - - - - - - - -->

    </div>

    <!-- Include Libs & Plugins
    ============================================ -->
    <script src="~/js/jquery-2.1.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="~/plugins/svg/snap.svg-min.js"></script>
    <script src="~/plugins/svg/svgicons-config.js"></script>
    <script src="~/plugins/svg/svgicons.js"></script>
    <script src="~/plugins/jquery.mousewheel.min.js"></script>
    <script src="~/plugins/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/plugins/fancybox/jquery.fancybox.pack.js"></script>
    <script src="~/plugins/fancybox/helpers/jquery.fancybox-thumbs.js"></script>
    <script src="~/plugins/fancybox/helpers/jquery.fancybox-buttons.js"></script>
    <script src="~/plugins/fancybox/helpers/jquery.fancybox-media.js"></script>
    <script src="~/plugins/isotope.pkgd.min.js"></script>
    <script type="text/javascript" src="https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53b561d45194bf47" async="async"></script>

    <!-- Add necessary JS references for Select2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- Theme files
    ============================================ -->

    <script src="~/js/theme.core.js"></script>
    <script src="~/js/theme.plugins.js"></script>
    <script src="~/js/homepage.js"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



